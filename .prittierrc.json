{
	"bracketSpacing": true,
	"bracketSameLine": false,
	"jsxSingleQuote": true,
	"singleQuote": false,
	"trailingComma": "none",
	"arrowParens": "always",
	"tabWidth": 2,
	"printWidth": 120,
	"semi": true,
	"useTabs": true,
	"proseWrap": "never",
	"htmlWhitespaceSensitivity": "css",
	"quoteProps": "as-needed",
	"endOfLine": "auto",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"printWidth": 80
			}
		}
	]
}